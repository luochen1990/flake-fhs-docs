---
import '../styles/404.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
</head>
<body class="bg-gray-950 text-green-500 font-mono h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-2xl bg-gray-900 rounded-lg shadow-2xl overflow-hidden border border-gray-800">
        <!-- Terminal Header -->
        <div class="bg-gray-800 px-4 py-2 flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <div class="ml-4 text-gray-400 text-sm">user@nixos:~</div>
        </div>
        
        <!-- Terminal Content -->
        <div class="p-6 space-y-4">
            <div>
                <span class="text-blue-400">➜</span>
                <span class="text-teal-400">~</span>
                <span class="text-gray-400">$</span>
                <span class="ml-2">nix build .<span id="path-display" class="opacity-75">/unknown-path</span></span>
            </div>
            
            <div class="text-red-400">
                error: flake output attribute '<span id="error-path" class="font-bold">...</span>' not found
            </div>

            <div class="pt-4 text-gray-400">
                Did you mean one of these?
            </div>

            <div class="grid gap-2 pl-4">
                <a href="/" class="hover:text-green-400 hover:underline flex items-center gap-2 transition-colors">
                    <span class="text-gray-600">./</span>home
                </a>
                <a href="/zh-cn/manual" class="hover:text-green-400 hover:underline flex items-center gap-2 transition-colors">
                    <span class="text-gray-600">./</span>manual
                </a>
                <a href="https://github.com/luochen1990/flake-fhs" class="hover:text-green-400 hover:underline flex items-center gap-2 transition-colors">
                    <span class="text-gray-600">./</span>github-repo
                </a>
            </div>

            <div class="pt-8">
                <span class="text-blue-400">➜</span>
                <span class="text-teal-400">~</span>
                <span class="text-gray-400">$</span>
                <span class="ml-2 animate-blink">_</span>
            </div>
        </div>
    </div>

    <script>
        const path = window.location.pathname;
        const pathDisplay = document.getElementById('path-display');
        const errorPath = document.getElementById('error-path');
        
        if (pathDisplay) pathDisplay.innerText = path;
        if (errorPath) errorPath.innerText = path;
    </script>
</body>
</html>
